<p id="notice"><%= notice %></p>
<h1>Categories</h1>
<div class="table-responsive">
  <table>
    <thead>
      <tr>
        <th>Category</th>
        <th>Total Products</th>
        <th>List Products</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <td><%= category.products.count %></td>
        <td>
          <ul>
          <% category.products.each do |product| %>
          <li><%= link_to product.title, product %></li>
          <% end %>
        <td><%= link_to 'Show', category, class: "btn btn-xs btn-primary" %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-xs btn-primary" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<br>


