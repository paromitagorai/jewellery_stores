<%= render 'shared/errors', obj: category %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for category, method: "POST", :html => { class: "form-horizontal", role: "form"} do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control",placeholder: "Name of Jewellery Category", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :desc, class: "form-control",placeholder: "Description" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="actions">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
