<%= render 'shared/errors', obj: product %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for product, :html => { class: "form-horizontal", role: "form", :multipart => true} do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control",placeholder: "Title of Jewellery Item", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :desc, rows: 10, class: "form-control",placeholder: "Add some description" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :price %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :price, class: "form-control", placeholder: "Price" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :category_id %>
        </div>
        <div>
          <%= f.select :category_id, Category.all.map{|c| [c.name, c.id]}, :prompt => "Select a category" %>  |
          <%= link_to "OR Create One", new_category_path %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :photo %>
        </div>
        <div>
          <%= f.file_field :photo %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="actions">
            <%= f.submit class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
